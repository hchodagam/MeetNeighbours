<div id="wrapper" ng-controller="MeetNeighboursController">
    <header>
        <div><img class="logo" src="~/Content/Images/logo_mn1.png" /></div>
    </header>
    <div id="sidebar-wrapper">

    </div>
    <h2>Create New Client</h2>
    <div class="row">
        <div class="col-md-4">
            <section id="CreateClientForm">
                <form class="form-horizontal" name="AddClient">


                    <div class="form-group">
                        <label class="col-md-4 control-label">Category</label>
                        <div class="col-md-8">
                            <input class="form-control" type="text" ng-model="Category.Name" required />

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Description</label>
                        <div class="col-md-8">
                            <input class="form-control" type="text" ng-model="Category.Description" required />

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <button class="btn btn-default" ng-click="add()">Add Category</button>

                        </div>
                    </div>

                </form>
            </section>
        </div>
    </div>
</div>
